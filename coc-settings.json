{
    "coc.preferences.formatOnSaveFiletypes": [
        "java",
        "typescript",
        "html",
        "css",
        "markdown",
        "javascript",
        "graphql",
        "yaml",
        "json",
        "python",
        "c",
        "cpp",
        "vim",
        "lua"
    ],
    "snippets.extends": {
        "javascript": [
            "html",
            "javascriptreact",
            "jsx"
        ],
        "typescript": [
            "javascript"
        ]
    },
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp",
                "h"
            ],
            "rootPatterns": [
                ".ccls",
                ".git/",
                ".hg/",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
