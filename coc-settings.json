{
    "coc.preferences.formatOnSaveFiletypes": [
        "java",
        "typescript",
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json",
        "python",
        "c",
        "vim",
        "lua",
        "nvim"
    ],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd",
    "typescript.autoClosingTags": true,
    "snippets.extends": {
        "javascript": [
            "html",
            "javascriptreact",
            "jsx"
        ],
        "typescript": [
            "javascript"
        ]
    },
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "c++"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".git/",
                "hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
